generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum Mode {
  USER
  ADMIN
}

enum Gender {
  MALE
  FEMALE
}

enum LearnType {
  VOCABULARY
  EXPRESSIONS
}

enum PartOfSpeech {
  VERB
  NOUN
  PRONOUN
  ADJECTIVE
  ADVERB
  INTERJECTION
  PREPOSITION
  CONJUNCTION
}

enum Status {
  PUBLIC
  SEMI_PRIVATE
  PRIVATE
}

enum TrainingType {
  QUIZ
  FLASHCARDS
}

enum BillingReason {
  initial
  renewal
  updated
}

enum BookmarkType {
  WORD
  LIST
  PACK
  SET
}

enum ExpressionType {
  COLLOCATION
  IDIOM
  PROVERB
  PHRASAL_VERB
}

enum AllowedUserType {
  SET
  WORD_LIST
}

type File {
  url String  @db.String
  key String?
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  role UserRole @default(USER)

  username String

  email String @unique
  hash  String

  avatar File?

  gender         Gender?
  nativeLanguage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  passwordResetLink PasswordResetLink[]
  trainingSessions  TrainingSession[]

  billingInfo  BillingInfo?
  subscription Subscriptions?

  bookmarks       Bookmarks[]
  canAccess       AllowedUser[]
  createdMeanings Meanings[]
  createdWords    Word[]
}

model PasswordResetLink {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  code String @unique @db.String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId

  createdAt DateTime @default(now())
}

// Billing 

model BillingInfo {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  firstName String
  lastName  String
  email     String 

  country     String
  city        String
  address     String
  phoneNumber Int
  postalCode  String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId
}

model Subscriptions {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  lsSubscriptionId String @unique
  productId        Int

  endsAt    DateTime?
  createdAt DateTime  @default(now())

  userId String @unique @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  isUnlimite Boolean @default(false)

  payments Payments[]
}

model Payments {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  subscription   Subscriptions? @relation(fields: [subscriptionId], references: [id])
  subscriptionId String?        @db.ObjectId

  billingReason BillingReason

  subtotal Int
  tax      Int
  total    Int

  createdAt DateTime @default(now())
}

// Bookmarks
model Bookmarks {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId

  type BookmarkType @default(WORD)

  set   Set?    @relation(fields: [setId], references: [id], onDelete: Cascade)
  setId String? @db.ObjectId

  pack   Pack?   @relation(fields: [packId], references: [id], onDelete: Cascade)
  packId String? @db.ObjectId

  word   Word?   @relation(fields: [wordId], references: [id], onDelete: Cascade)
  wordId String? @db.ObjectId

  list   List?   @relation(fields: [listId], references: [id], onDelete: Cascade)
  listId String? @db.ObjectId
}

model Pack {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  type LearnType @default(VOCABULARY)

  sets      PackToSet[]
  bookmarks Bookmarks[]
}

model PackToSet {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  set   Set    @relation(fields: [setId], references: [id], onDelete: Cascade)
  setId String @db.ObjectId

  pack   Pack   @relation(fields: [packId], references: [id], onDelete: Cascade)
  packId String @db.ObjectId
}

model AllowedUser {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  type AllowedUserType

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  set   Set?    @relation(fields: [setId], references: [id])
  setId String? @db.ObjectId

  list   List?   @relation(fields: [listId], references: [id])
  listId String? @db.ObjectId
}

model Set {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  lists ListToSet[]
  packs PackToSet[]

  mode   Mode   @default(USER)
  status Status @default(PRIVATE)

  allowedUsers AllowedUser[]

  image       File
  name        String
  description String    @db.String
  type        LearnType @default(VOCABULARY)

  bokmarks Bookmarks[]
}

model ListToSet {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  wordList   List   @relation(fields: [wordListId], references: [id], onDelete: Cascade)
  wordListId String @db.ObjectId

  set   Set    @relation(fields: [setId], references: [id], onDelete: Cascade)
  setId String @db.ObjectId
}

model List {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  trainingSessions TrainingSession[]
  sets             ListToSet[]
  words            WordToList[]
  expressions      ExpressionToList[]

  mode   Mode   @default(USER)
  status Status @default(PRIVATE)

  type LearnType @default(VOCABULARY)

  name        String
  description String @db.String

  bookmarks    Bookmarks[]
  allowedUsers AllowedUser[]
}

model WordToList {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  list   List   @relation(fields: [listId], references: [id], onDelete: Cascade)
  listId String @db.ObjectId

  word   Word   @relation(fields: [wordId], references: [id], onDelete: Cascade)
  wordId String @db.ObjectId

  meaning    Meanings @relation(fields: [meaningsId], references: [id], onDelete: Cascade)
  meaningsId String   @db.ObjectId
}

model ExpressionToList {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  list   List   @relation(fields: [listId], references: [id], onDelete: Cascade)
  listId String @db.ObjectId

  expression   Expression @relation(fields: [expressionId], references: [id], onDelete: Cascade)
  expressionId String     @db.ObjectId

  meaning    Meanings @relation(fields: [meaningsId], references: [id], onDelete: Cascade)
  meaningsId String   @db.ObjectId
}

// Training

model TrainingSession {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId

  list   List   @relation(fields: [listId], references: [id], onDelete: Cascade)
  listId String @db.ObjectId

  type TrainingType
}

// Word and Expression models

type Transcription {
  en String?
  us String?
}

model Expression {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  type          ExpressionType
  text          String
  transcription Transcription?
  partsOfSpeech PartOfSpeech[]
  meanings      Meanings[]
  lists         ExpressionToList[]
}

model Word {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name     String
  meanings Meanings[]

  transcription Transcription
  partsOfSpeech PartOfSpeech[]

  lists WordToList[]

  bookmarks Bookmarks[]

  creator   User?   @relation(fields: [creatorId], references: [id], onDelete: SetNull)
  creatorId String? @db.ObjectId
}

model Meanings {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  type LearnType @default(VOCABULARY)

  definition   String
  image        File?
  examples     String[]
  partOfSpeech PartOfSpeech

  wordLists       WordToList[] // Списки в яких використовується це визначення
  expressionLists ExpressionToList[]

  word   Word?   @relation(fields: [wordId], references: [id], onDelete: Cascade)
  wordId String? @db.ObjectId

  expression   Expression? @relation(fields: [expressionId], references: [id], onDelete: Cascade)
  expressionId String?     @db.ObjectId

  creator   User?   @relation(fields: [creatorId], references: [id], onDelete: SetNull)
  creatorId String? @db.ObjectId
}
